<ol id='toc-list'>
  <% if blog.tags['Recent Posts'] %>
    <li class='level-1'>
      <a href="<%= tag_path 'Recent Posts'%>">最近文章</a>
      <ol style="display:block">
        <% blog.tags['Recent Posts'].sort_by(&:date).reverse.each_with_index do |article, i| %>
          <li class='level-3'><%= link_to article.title, article %></li>
        <% end %>
      </ol>
    </li>
  <% end %>
  <% if blog.tags['Weekly'] %>
    <li class='level-1'>
      <a href="<%= tag_path 'Weekly'%>">Ember.js周报</a>
      <ol style="display:block">
        <% blog.tags['Weekly'].sort_by(&:date).reverse.each_with_index do |article, i| %>
          <li class='level-3'><%= link_to article.title, article %></li>
        <% end %>
      </ol>
    </li>
  <% end %>
</ol>
